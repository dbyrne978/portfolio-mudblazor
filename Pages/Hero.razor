@page "/hero"

<MudContainer Class="px-8" MaxWidth="MaxWidth.False">
    <MudGrid>
        <MudItem xs="12" md="9">
            <MudGrid>
                <MudItem xs="12">
                    <MudPaper Class="pa-4" Style="height:fit-content">
                        <MudText Typo="Typo.h2" GutterBottom="true">Daniel Byrne</MudText>
                        <MudText Typo="Typo.h3" GutterBottom="true">Full Stack Web Developer</MudText>
                        <MudText Class="mb-8">
                            Hello, my name is Daniel Byrne. I am a software developer currently looking for new opportunities.
                            I am familiar with the C# and MERN stacks.
                            I have provided some of my personal projects below to demonstrate my capabilities in various technologies.
                            Thank you for your time.
                        </MudText>
                    </MudPaper>
                </MudItem>
            </MudGrid>
        </MudItem>
        <MudItem xs="12" md="3">
            <MudImage Fluid="true" Src="images/selfie.jpg" Alt="Dan's Headshot" Class="rounded-lg" />
        </MudItem>
    </MudGrid>
</MudContainer>
