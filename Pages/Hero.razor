                                       Color="Color.Inherit"
                                       Link="https://www.linkedin.com/in/daniel-byrne-34938a143/"
                                       Target="_blank">
                                My LinkedIn
                            </MudButton>
                            <MudButton StartIcon="@Icons.Filled.Email"
                                       Color="Color.Inherit"
                                       Link="mailto:dbyrne978@gmail.com"
